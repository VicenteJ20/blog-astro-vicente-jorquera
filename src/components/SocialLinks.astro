---
const { url, content } = Astro.props
import ShareBtn from '../components/ShareBtn.astro'
---

<ul class='flex items-center gap-3 text-xl'>
  <li>
    <ShareBtn url={url} title={'Linkedin'} content={content} />
  </li>
  <li>
    <ShareBtn url={url} title={'Twitter'} content={content} />
  </li>
  <li>
    <ShareBtn url={url} title={'Instagram'} content={content} />
  </li>
</ul>