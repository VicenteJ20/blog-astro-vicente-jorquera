---
const { url, title } = Astro.props;
import Linkedin from '../icons/Linkedin.astro'
import Twitter from '../icons/Twitter.astro'
import Instagram from '../icons/Instagram.astro'
---

<a href={url} target="_blank" rel="noreferrer" class='block border-2 border-slate-200 bg-white p-2 rounded-full dark:border-slate-300 dark:text-white dark:bg-slate-800 transition-all ease-in-out duration-300 hover:bg-lime-100 dark:hover:bg-lime-800'>
  {
    title === 'Linkedin'
    ? <Linkedin /> : title === 'Twitter' ? <Twitter /> : <Instagram />
  }
</a>
