---
import GeneralLayout from '../layouts/GeneralLayout.astro'
import Header from '../components/Header.astro'
import VerticalCard from '../components/VerticalCard.astro'
const allPosts = await Astro.glob('../pages/articulos/*.md')
---

<GeneralLayout title='Artículos'>
  <section class='flex flex-col gap-8 lg:gap-14'>
    <Header title='Todos los artículos' />
    <section class="grid grid-cols-3 gap-5 lg:gap-10 min-h-full">
      {
        allPosts.map((post) => (
          <VerticalCard frontmatter={post.frontmatter} url={post.url} showUserPic={false} />
        ))
      }
    </section>
  </section> 
</GeneralLayout>