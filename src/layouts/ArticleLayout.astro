---
import Image from "astro/components/Image.astro";
import GeneralLayout from "./GeneralLayout.astro";
import SocialLinks from "../components/SocialLinks.astro";
import AuthorCard from "../components/AuthorCard.astro";
const { frontmatter, url } = Astro.props;
---

<GeneralLayout title={frontmatter.title} frontmatter={frontmatter}>
  <section class="flex flex-col gap-4 my-5">
    <ul class="text-sm flex flex-row gap-6 items-center">
      <li
        class="px-3 py-2 rounded-full border border-slate-400 text-slate-700 dark:text-slate-300 w-fit"
      >
        {frontmatter.category}
      </li>
      <li class="date text-slate-700 dark:text-slate-300">
        {frontmatter.pubDate}
      </li>
    </ul>
    <h1
      class="text-3xl lg:text-5xl font-semibold lg:leading-tight text-slate-800 dark:text-slate-200"
    >
      {frontmatter.title}
    </h1>
    <div class="flex flex-row gap-4 justify-between mt-8">
      <div class="flex flex-row gap-3 items-center">
        <Image
          src={frontmatter.authorImage}
          alt={frontmatter.author}
          class="rounded-full w-8 h-8"
          width={32}
          height={32}
					loading='eager'
        />
        <p class="text-sm text-slate-700 dark:text-slate-300 font-semibold">
          {frontmatter.author}
        </p>
      </div>
      <SocialLinks url={url} content={frontmatter.title} />
    </div>
		<Image width={1000} height={600} src={frontmatter.image.url} alt={frontmatter.image.alt} class='rounded-lg w-full max-h-[38rem] object-cover object-top' loading='eager' />
  </section>
  <article class='text-slate-700 dark:text-slate-200 article-md max-w-screen-lg mx-auto'>
    <slot />
  </article>
  <AuthorCard />
</GeneralLayout>

<style is:global>
  .article-md > p {
    font-size: 1.125rem;
    line-height: 1.5;
    margin: 1rem 0;
  }
  .article-md h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  .article-md h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  .article-md ul {
    list-style: disc;
    padding-left: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .article-md ul li ul {
    list-style: circle;
    padding-left: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin: 1rem 0;
  }

  .article-md ul li a {
    transition: all 0.3s ease-in-out;
    color: rgb(215, 146, 7);
    font-weight: 500;
  }

  .article-md ul li a:hover {
    color: rgb(0, 149, 20);
    text-decoration: underline;
  }

  .article-md ul li a:visited {
    color: rgb(150, 4, 179);
  }

  .article-md img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 1rem auto;
    border-radius: 1rem;
  }

  .article-md ol {
    list-style: decimal;
    padding-left: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    font-weight: 500;
    margin: 1rem 0;
  }

  .article-md ol > li {
    margin: 0 0 0 0.5rem;
  }

  .article-md ol > li > ul {
    list-style: circle;
    padding-left: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin: 0.5rem 0;
  }

  .article-md pre {
    margin: 1rem 0 !important;
  }
</style>